<PlusConfiguration version="1.4">

  <DataCollection StartupDelaySec="1.0">
    <DeviceSet 
      Name="TEST SonixTouch with Fake tracker" 
      Description="Test mode for vtkDataCollectorTest with SonixTouch and Fake tracker. The SonixTouch US device should be in research mode." 
    />

    <Device 
      Id="FakeTracker"
      Type="FakeTracker"
      AcquisitionRate="30"
      LocalTimeOffsetSec="0.0"
      DefaultToolName="Stylus"
      Mode="PivotCalibration"
      ReferenceToolName="Reference"
      Selectable="true" >
      <Tool Name="Reference" BufferSize="200" AveragedItemsForFiltering="20" PortName="0"/> 
      <Tool Name="Stylus" BufferSize="200" AveragedItemsForFiltering="20" PortName="1" />
      <OutputStream Id="Tracker">
        <Tool Name="Reference"/>
        <Tool Name="Stylus"/>
      </OutputStream>
    </Device>

    <Device
      Id="SomeVideoSource"
      Type="SonixVideo" 
      UsImageOrientation="MF"
      AcquisitionRate="-1" 
      IP="130.15.7.20" 
      ImagingMode="BMode"
      AcquisitionDataType="BPost" 
      Depth="-1" 
      Sector="-1" 
      Gain="-1" 
      DynRange="-1" 
      Zoom="-1" 
      Frequency="-1" 
      Timeout="-1" 
      CompressionStatus="0" 
      Selectable="true" >
      <OutputStream Id="Output" BufferSize="100" AveragedItemsForFiltering="20" />
    </Device>
  </DataCollection>

</PlusConfiguration>
