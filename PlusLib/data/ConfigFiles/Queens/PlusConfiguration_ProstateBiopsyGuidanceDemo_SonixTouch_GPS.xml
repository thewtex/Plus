<PlusConfiguration version="2.0">

  <DataCollection StartupDelaySec="1.0" DefaultSelectedDeviceId="TrackedVideoDevice" >
    <DeviceSet 
      Name="SonixTouch with GPS tracker (UBC)" 
      Description="SonixTouch and GPStracker. The SonixTouch US device should be in research mode. Used at UBC" 
    />

    <Device
      Id="TrackerDevice" 
      Type="Ascension3DG" 
      AcquisitionRate="50" 
      LocalTimeOffsetSec="0.0" 
      FilterAcWideNotch="1" >
      <Tool Name="Probe" BufferSize="500" PortName="0" AveragedItemsForFiltering="20" />      
      <OutputStream Id="TrackerStream" >
        <Tool Name="Probe"/>
      </OutputStream>
    </Device>

    <Device
      Id="VideoDevice" 
      Type="SonixVideo"      
      UsImageOrientation="MF"
      IP="137.82.56.185" 
      ImagingMode="BMode"
      AcquisitionDataType="BPost" 
      Depth="-1" 
      Sector="-1" 
      Gain="-1" 
      DynRange="-1" 
      Zoom="-1" 
      Frequency="-1" 
      Timeout="-1" 
      CompressionStatus="0" >
      <Image Id="Video" BufferSize="500" AveragedItemsForFiltering="20" />
      <OutputStream Id="VideoStream">
        <Image Id="Video"/>
      </OutputStream>
    </Device>

    <Device Id="TrackedVideoDevice" Type="VirtualStreamMixer">
      <InputStream Id="TrackerStream" />
      <InputStream Id="VideoStream" />
      <OutputStream Id="TrackedVideoStream"/>
    </Device>
    
  </DataCollection>

  <ProstateBiopsy AcquisitionTime="3" />

</PlusConfiguration>
