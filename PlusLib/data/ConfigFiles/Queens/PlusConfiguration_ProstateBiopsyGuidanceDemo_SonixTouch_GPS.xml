<PlusConfiguration version="2.0">

  <DataCollection StartupDelaySec="1.0">
    <DeviceSet 
      Name="SonixTouch with GPS tracker (UBC)" 
      Description="SonixTouch and GPStracker. The SonixTouch US device should be in research mode. Used at UBC" 
    />

    <Device
      Id="TrackerDevice" 
      Type="Ascension3DG" 
      AcquisitionRate="50" 
      LocalTimeOffsetSec="0.0" 
      FilterAcWideNotch="1" >
      <Tool Name="Probe" BufferSize="500" PortName="0" AveragedItemsForFiltering="20" />
      
      <OutputStream Id="TrackerOutput" >
        <Tool Name="Probe"/>
      </OutputStream>
    </Device>

    <Device
      Type="SonixVideo"
      Id="VideoDevice" 
      UsImageOrientation="MF"
      IP="137.82.56.185" 
      ImagingMode="BMode"
      AcquisitionDataType="BPost" 
      Depth="-1" 
      Sector="-1" 
      Gain="-1" 
      DynRange="-1" 
      Zoom="-1" 
      Frequency="-1" 
      Timeout="-1" 
      CompressionStatus="0" >
      <Image Id="VideoOutput" BufferSize="500" AveragedItemsForFiltering="20" />
      <OutputStream Id="VideoDeviceOutput">
        <Image Id="VideoOutput"/>
      </OutputStream>
    </Device>

    <Device Id="FinalMixer" Type="VirtualStreamMixer" Selectable="True">
      <OutputStream Id="Final"/>
      <InputStream Id="TrackerOutput" />
      <InputStream Id="VideoDeviceOutput" />
    </Device>
  </DataCollection>

  <ProstateBiopsy AcquisitionTime="3" />

</PlusConfiguration>
