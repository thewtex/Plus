<PlusConfiguration version="2.0">

  <DataCollection StartupDelaySec="1.0">
    <DeviceSet 
      Name="No video + Phidget Spatial" 
      Description="Configuration file for No video + Phidget Spatial accelerometer. Keep the device stationary for 2 seconds after connect." 
    />

    <Device
      Type="PhidgetSpatial"
      Id="DevicePhidgetSpatial"
      AhrsAlgorithm="MADGWICK_MARG"
      AhrsAlgorithmGain="1.5"
      TiltSensorWestAxisIndex="1"
      AcquisitionRate="125"
      LocalTimeOffsetSec="0.0" 
      Selectable="true">
      <Tool Name="OrientationSensor" PortName="OrientationSensor" BufferSize="2500" AveragedItemsForFiltering="20"/>    
      <xTool Name="TiltSensor" PortName="TiltSensor" BufferSize="2500" AveragedItemsForFiltering="20"/>
      <xTool Name="Accelerometer" PortName="Accelerometer" BufferSize="2500" AveragedItemsForFiltering="20"/>
      <xTool Name="Gyroscope" PortName="Gyroscope" BufferSize="2500" AveragedItemsForFiltering="20"/>
      <xTool Name="Magnetometer" PortName="Magnetometer" BufferSize="2500" AveragedItemsForFiltering="20"/>     
      
      <OutputStream Id="OutputPhidgetSpatial" >
        <Tool Name="OrientationSensor"/>
        <xTool Name="TiltSensor"/>
        <xTool Name="Accelerometer"/>
        <xTool Name="Gyroscope"/>
        <xTool Name="Magnetometer"/>
      </OutputStream>
    </Device>
  </DataCollection>
  
  <PlusOpenIGTLinkServer MaxNumberOfIgtlMessagesToSend="1" MaxTimeSpentWithProcessingMs="50" ListeningPort="18944" > 
    <DefaultClientInfo> 
      <MessageTypes> 
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <TransformNames> 
        <Transform Name="OrientationSensorToTracker" /> 
        <xTransform Name="TiltSensorToTracker" /> 
        <xTransform Name="AccelerometerToTracker" /> 
        <xTransform Name="GyroscopeToTracker" /> 
        <xTransform Name="MagnetometerToTracker" /> 
      </TransformNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>
  
</PlusConfiguration>