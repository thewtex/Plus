<USDataCollection version="2.0" StartupDelaySec="1.0">
    <DeviceSet 
            Name="Tracking and video data is read from sequence metafile." 
            Description="Test configuration file for vtkDataCollectorTest to use saved dataset.
                         The SequenceMetafile names should be defined either from command line argument or from configuration file!" 
            />

    <Tracker
      Type="SavedDataset"
      BufferSize="200"
      Frequency="5"
      LocalTimeOffset="0.0"
      DefaultToolName="Probe"
      >
      <!-- DefaultToolName="Probe" -->
      
      <Tool
      Name="Probe"
      PortNumber="0"
      SendTo="localhost:18944">
      </Tool>
      
    </Tracker>

    <ImageAcqusition Type="SavedDataset" 
            BufferSize="20" 
            FrameSize="320 240" 
            UsImageOrientation="MF"
            FrameRate="5" 
            AveragedItemsForFiltering="20" 
            LocalTimeOffset="0.0" 
            />

    <Synchronization Type="ChangeDetection"
            SynchronizationTimeLength="30" 
            MinNumOfSyncSteps="5" 
            ThresholdMultiplier="5"

            NumberOfAveragedTransforms="20" 
            MinTransformThreshold="2.0" 
            MaxTransformDifference="2.0" 

            NumberOfAveragedFrames="6" 
            MinFrameThreshold="200.0" 
            MaxFrameDifference="10.0" 
            />
</USDataCollection>
