<PlusConfiguration version="1.3">

  <!-- DATA COLLECTION -->
  <DataCollection version="2.0" StartupDelaySec="1.0">
    <DeviceSet 
        Name="TEST Tracking and video data is read from sequence metafile." 
        Description="Test configuration file for vtkDataCollectorTest to use saved dataset. The SequenceMetafile names should be defined either from command line argument or from configuration file!" 
        />

    <Tracker Type="SavedDataset" BufferSize="200" Frequency="10" LocalTimeOffset="0.0" DefaultToolName="Probe" SequenceMetafile="" AveragedItemsForFiltering="20" >
      <Tool Name="Tool" PortName="0" />
    </Tracker>

    <ImageAcquisition Type="SavedDataset" 
        BufferSize="200" 
        FrameSize="640 480" 
        FrameRate="10" 
        AveragedItemsForFiltering="20" 
        LocalTimeOffset="0.0" 
        UsImageOrientation="MF"
        />

    <Synchronization Type="ChangeDetection"
        SynchronizationTimeLength="30" 
        MinNumOfSyncSteps="5" 
        ThresholdMultiplier="5"

        NumberOfAveragedTransforms="20" 
        MinTransformThreshold="2.0" 
        MaxTransformDifference="2.0" 

        NumberOfAveragedFrames="6" 
        MinFrameThreshold="200.0" 
        MaxFrameDifference="10.0" 
        />
  </DataCollection>

</PlusConfiguration>
